<section class="content">
	<div class="content__container">
		<div class="content__desktop"></div>
		<div class="content__mobile"></div>
	</div>
</section>

<style lang="scss">
	@use "sass:math";
	@use "../../styles/grid.scss" as grid;
	@use "../../styles/utilities.scss" as utils;
	@use "../../styles/variables.scss" as vars;

	.content {
		$from: 200;
		$to: math.div($from, 2);
		@include utils.adaptiveValue("margin-top", $from, $to);
		&__container {
			max-width: utils.rem(grid.$containerWidth);
			margin: 0 auto;
			padding: 0px 30px;
		}
		&__desktop {
			display: none;
		}
		&__mobile {
			display: none;
		}
	}
</style>
